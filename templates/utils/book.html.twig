<div class="book-view p-3">
    <h3 class="book-title"> {{ book.title }}</h3>
    <h4 class="book-autor"> {{ book.autor }}</h4>
    <p class="book-parution"> Date de parution : {{ book.parution }} </p>
    <h5 class="book-description-title">Résumé</h5>
    <p class="book-description"> {{ book.description }}</p>
    <div class="d-flex justify-content-around">
        <a href="{{ path('reservation', {'id' : book.id}) }}" class="card-link">Réserver</a>
        <a href="" class="card-link">Ajouter aux favoris</a>
    </div>
</div>